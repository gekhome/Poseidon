<Window x:Class="MessageBoxUtils.WPFMessageBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MessageBoxUtils"
        Title="{Binding Title}" Icon="/WPFMessageBox;component/message.png" 
        ResizeMode="NoResize" SizeToContent="WidthAndHeight" FlowDirection="{Binding TitleFlowDirection}"
        ShowInTaskbar="False" WindowStartupLocation="CenterScreen" KeyDown="Window_KeyDown" Width="250">
    
    
    <Border CornerRadius="10"
          BorderBrush="Gray"
          BorderThickness="3"
          Background="FloralWhite"
          Margin="24"
          Padding="4" MinHeight="305" Width="250">
        <Border.Effect>
            <DropShadowEffect Color="Gray" Opacity=".50" ShadowDepth="8" />
        </Border.Effect>
        <local:WPFMessageBoxControl />
        
    </Border>
</Window>
