        </LinearGradientBrush>
    </Page.Background>


    <Grid>
        <my:NavPage/>
        <my:xClock HorizontalAlignment="Right" VerticalAlignment="Top" Width="104" Height="92"/>
        <StackPanel  Orientation="Vertical">

            <TextBlock Foreground="White" Text ="Κενή σελίδα" FontFamily="Segoe UI" FontSize="28" FontWeight="Normal" HorizontalAlignment="Center" VerticalAlignment="Top" MinHeight="50"/>
            <Border BorderBrush="White" BorderThickness="2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="700" Height="400" Margin="0,60">

                <TextBlock Text="Προς υλοποίηση" FontFamily="Segoe UI" FontSize="40" Foreground="WhiteSmoke" HorizontalAlignment="Center" VerticalAlignment="Center"/>

            </Border>

        </StackPanel>

    </Grid>


</Page>
