<Page
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" 
    xmlns:FrameNavigationWPF="clr-namespace:FrameNavigationWPF;assembly=FrameNavigationWPF"
	x:Class="FrameNavigateTest.Page2"
	x:Name="Page"
	WindowTitle="Page"
	FlowDirection="LeftToRight"
	Width="640" Height="480"
	WindowWidth="640" WindowHeight="480">

	<Grid x:Name="LayoutRoot" Background="Red">
		<TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Page 2" VerticalAlignment="Top" Foreground="White" FontSize="48" Margin="8,8,0,0"/>
		<Button Content="Go To Page 1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="8,110,0,0">
			<i:Interaction.Behaviors>
				<FrameNavigationWPF:FrameNavigate NavigateTo="Page1.xaml" TransitionTime="1" Transition="Random"/>
			</i:Interaction.Behaviors>
		</Button>
    </Grid>
</Page>